package net.makersville.forge.mods.nuclear;

import java.util.Random;

import net.makersville.forge.mods.Main;
import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraft.block.state.IBlockState;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.Item;
import net.minecraftforge.fml.common.registry.GameRegistry;

public class UraniumOre extends Block {
	
	public static final String NAME = "uraniumOre";
	
	private static final int QUANTITY = 1;
	private static final int META = 0;
	
	private static boolean singleton_created = false;
	private static Block singleton;
	
	private Item uraniumDrop;
	
	public static Block get_object() {
		if (!singleton_created) {
			singleton = new UraniumOre();
		}
		return singleton;
	}
	
	public UraniumOre() {
		super(Material.rock);
		
		singleton_created = true;
		this.uraniumDrop = Uranium.get_object();
		this.meta = META;
		
		this.setUnlocalizedName(NAME);
		this.setCreativeTab(CreativeTabs.tabBlock);
		this.setLightLevel(0.4f);
		
		this.setHardness(10.0F);
        this.setResistance(10.0F);
        this.setHarvestLevel("pickaxe", 3);
        this.setStepSound(soundTypeStone);
		
		GameRegistry.registerBlock(this, NAME);
	}
	
	public void set_drop(Item drop, int meta, int least_q, int most_q) {
		this.uraniumDrop = drop;
		this.meta = meta;
		this.least = least_q;
		this.most = most_q;
	}
	
	@Override
	public Item getItemDropped(IBlockState blockstate, Random random, int fortune) {
	    return this.uraniumDrop;
	}

	@Override
	public int damageDropped(IBlockState blockstate) {
	    return this.meta;
	}
	
	@Override
	public int quantityDropped(IBlockState blockstate, int fortune, Random random) {
	    return QUANTITY;
	}

	
	private int meta;
	private int least = 1;
	private int most = 1;
}
