package net.makersville.forge.mods.multimaker.food;

import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.Item;
import net.minecraft.item.ItemFood;

public class Lemon extends ItemFood {
	public static final String NAME = "lemon";
	
	private static boolean singleton_created = false;
	private static Item singleton;
	
	public static Item getObject() {
		if (!singleton_created) {
			singleton = new Lemon();
			singleton_created = true;
		}
		return singleton;
	}
	
	protected Lemon() {
		super(5, 1.0f, false);
		this.setAlwaysEdible();
		this.setUnlocalizedName(NAME);
		this.setCreativeTab(CreativeTabs.tabFood);
	}
}
